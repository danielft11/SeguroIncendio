<!DOCTYPE html>

<html lang="pt-br">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap Core CSS -->
    <link href="@Url.Content("~/Content/startbootstrap-sb-admin-2-gh-pages/vendor/bootstrap/css/")bootstrap.min.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/startbootstrap-sb-admin-2-gh-pages/vendor/metisMenu/")metisMenu.min.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/startbootstrap-sb-admin-2-gh-pages/dist/css/")sb-admin-2.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/startbootstrap-sb-admin-2-gh-pages/vendor/morrisjs/")morris.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/startbootstrap-sb-admin-2-gh-pages/vendor/font-awesome/css/")font-awesome.min.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/")font-awesome.css" rel="stylesheet" type="text/css"/>

    @RenderSection("Styles", false)
</head>
<body>
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">RTDI Seguro Incêndio</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-bell fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-alerts">
                        <li>
                            <a href="#">
                                <div>
                                    <i class="fa fa-comment fa-fw"></i> Nova proposta
                                    <span class="pull-right text-muted small">4 minutos atrás</span>
                                </div>
                            </a>
                        </li>
                    </ul>
                    <!-- /.dropdown-alerts -->
                </li>
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#"><i class="fa fa-user fa-fw"></i> Perfil</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="login.html"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            @Html.ActionLink("Orçamentos", "Index", "Orcamentos")
                            @Html.ActionLink("Propostas", "Index", "Propostas")
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    @RenderBody()
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->

    </div>

    <!-- jQuery -->
    <script src="@Url.Content("~/Content/startbootstrap-sb-admin-2-gh-pages/vendor/jquery/")jquery.min.js"></script>
    <script src="@Url.Content("~/Content/startbootstrap-sb-admin-2-gh-pages/vendor/bootstrap/js/")bootstrap.min.js"></script>
    <script src="@Url.Content("~/Content/startbootstrap-sb-admin-2-gh-pages/vendor/metisMenu/")metisMenu.min.js"></script>
    <script src="@Url.Content("~/Content/startbootstrap-sb-admin-2-gh-pages/vendor/raphael/")raphael.min.js"></script>
    <script src="@Url.Content("~/Content/startbootstrap-sb-admin-2-gh-pages/vendor/morrisjs/")morris.min.js"></script>
    <script src="@Url.Content("~/Content/startbootstrap-sb-admin-2-gh-pages/data/")morris-data.js"></script>
    <script src="@Url.Content("~/Content/startbootstrap-sb-admin-2-gh-pages/vendor/jquery/")jquery.maskedinput-1.3.min.js"></script>
    <script src="@Url.Content("~/Content/startbootstrap-sb-admin-2-gh-pages/vendor/jquery/")jquery.maskMoney.js"></script>
    @RenderSection("ScriptPage", false)
</body>
</html>
